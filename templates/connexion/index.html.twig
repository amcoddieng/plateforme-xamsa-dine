{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    /* Conteneur du formulaire avec padding, couleur de fond, bordures et ombre */
    .login-container {
        padding: 2rem; /* Augmente le padding interne pour plus d'espace autour du formulaire */
        background-color: #f8f9fa; /* Couleur de fond claire */
        border-radius: .5rem; /* Rayon des bordures arrondi pour un meilleur effet visuel */
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1); /* Ombre portée pour donner un effet de profondeur */
        width: 100%; /* Prend toute la largeur disponible */
        max-width: 600px; /* Largeur maximale du conteneur pour éviter qu'il ne devienne trop grand */
        min-width: 320px; /* Largeur minimale pour éviter que le formulaire ne devienne trop petit sur petits écrans */
    }
    /* Style personnalisé pour le bouton */
    .btn-custom {
        background-color: #28a745; /* Couleur de fond verte */
        color: white; /* Couleur du texte en blanc */
        font-size: 1rem; /* Taille du texte du bouton */
        padding: .75rem; /* Padding interne du bouton pour plus d'espace autour du texte */
    }
    /* Effet de survol pour le bouton */
    .btn-custom:hover {
        background-color: #218838; /* Couleur de fond plus foncée pour le survol */
        color: white; /* Maintient la couleur du texte en blanc */
    }
    /* Style des labels des champs de formulaire */
    .form-label {
        font-size: 1rem; /* Taille du texte des labels */
    }
    /* Style des champs de formulaire */
    .form-control {
        font-size: 1rem; /* Taille du texte dans les champs de formulaire */
        padding: .75rem; /* Padding interne des champs de formulaire pour plus d'espace */
    }
    /* Styles pour les petits écrans (mobile) */
      @media all and (max-width: 976px) {
        .form-label {
            font-size: 1rem; /* Taille du texte des labels sur petits écrans */
        }
        .form-control {
            font-size: 1rem; /* Taille du texte dans les champs de formulaire */
            padding: .75rem; /* Maintient le padding sur petits écrans */
        }
        .btn-custom {
            font-size: 1rem; /* Taille du texte du bouton */
        }
    }
    /* Utilisation de la hauteur complète de la fenêtre d'affichage */
    .vh-100 {
        height: 100vh; /* Hauteur de la fenêtre d'affichage */
    }
    /* Flexbox pour centrer le conteneur */
    .d-flex {
        display: flex; /* Utilisation de flexbox */
    }
    .align-items-center {
        align-items: center; /* Centre les éléments verticalement */
    }
    .justify-content-center {
        justify-content: center; /* Centre les éléments horizontalement */
    }
    /* Ajuste la marge supérieure pour centrer le conteneur */
    .mt-7 {
        margin-top: -4rem; /* Ajuste la marge supérieure pour éviter que le conteneur ne soit trop bas */
    }
</style>

<div class="container vh-100 d-flex align-items-center justify-content-center mt-7">
    <div class="login-container">
        {% if error %}
            <div class="alert alert-danger" role="alert">
                <h3>Erreur de connexion : vérifiez vos données saisies</h3>
            </div>
        {% endif %}
        <h2 class="text-center mb-3">Connexion</h2>
        <form method="post" action="{{ path('app_connexion') }}">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="_username" value="{{ email }}" placeholder="Entrez votre adresse email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Entrez votre mot de passe" required>
            </div>
            <input type="hidden" name="_target_path" value="{{ path('app_home') }}">
            <button type="submit" class="btn btn-custom w-100">Se connecter</button>
            <div class="container w-60">
            <a class="float-start" href="#">Mot de passe oublier</a>
            <a class="float-end" href="{{ path('app_inscription') }}">S'inscrire</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}
