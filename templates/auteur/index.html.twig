{% extends 'base.html.twig' %} 
{% block stylesheets %}
<style>
.border{
    height:250px;
}
.livre{
    cursor:pointer;
}
.linkLivre{
    text-decoration:none;
}
  .overflow-scroll::-webkit-scrollbar {
    display: none;
  }

  /* Cacher la barre de d√©filement sur Firefox */
  .overflow-scroll {
    scrollbar-width: none; /* Firefox */
  }
</style>
{% endblock %}
{% block body %}

    <div class=" mt-5">
        <div class="container bg-success mt-5">
            <h2 class="text-center bg-light"> Les auteurs des livres <h2>
            <div class="row">
            {# {{ dump(auteurs) }} #}
                {% for auteur in auteurs %}
                    <div class="col col-md-2 p-auto mb-1">
                        {# <div class="col m-auto"> #}
                        <a class="linkLivre" href="{{ path('app_list_livre',{'id':auteur.id})}}">
                            <div class="card livre border" style="height:280px;">
                                <img src="{{ asset('upload/img/auteur/' ~ auteur.image) }}" height="200" width="500" class="card-img-top" alt="...">
                                <div class="card-body border text-center" style="max-height:200px;">
                                    <h5 class="card-title">{{ auteur.nom}}</h5>
                                    {# <p class="text-muted fs-5 overflow-scroll" style="height:60px;">{{ auteur.info }}</p> #}
                                </div>
                            </div>
                        </a>
                        {# </div> #}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
